  <div id="toast" class="toast" role="status" aria-live="polite"></div>

  <script>
    // Helpers
    const $ = (q,ctx=document)=>ctx.querySelector(q);
    const $$ = (q,ctx=document)=>Array.from(ctx.querySelectorAll(q));
    $('#year').textContent = new Date().getFullYear();

    // Smooth anchors
    $$('a[href^="#"]').forEach(a=>a.addEventListener('click',e=>{
      const id = a.getAttribute('href'); if(id.length>1){ e.preventDefault(); const el=document.querySelector(id); if(el) el.scrollIntoView({behavior:'smooth',block:'start'}); history.pushState(null,'',id); }
    }));

    // Theme toggle
    const themeBtn = $('#themeToggle');
    function setTheme(dark){
      if(dark){ document.documentElement.style.setProperty('--bg','#0b0f1a'); document.documentElement.style.setProperty('--text','#e6ebf5'); }
      else{ document.documentElement.style.setProperty('--bg','#f7f8fb'); document.documentElement.style.setProperty('--text','#0f1628'); }
      document.body.style.background = dark ? 'radial-gradient(1200px 600px at 10% -10%, #1a223a 0%, transparent 60%),radial-gradient(900px 500px at 100% 0%, #151b33 0%, transparent 50%), var(--bg)' : 'radial-gradient(1200px 600px at 10% -10%, #d7dcff 0%, transparent 60%),radial-gradient(900px 500px at 100% 0%, #e3e8ff 0%, transparent 50%), var(--bg)';
    }
    let dark = (localStorage.getItem('theme')||'dark')==='dark';
    setTheme(dark);
    themeBtn.addEventListener('click',()=>{ dark=!dark; setTheme(dark); localStorage.setItem('theme',dark?'dark':'light'); toast(dark?'Motyw: ciemny':'Motyw: jasny'); });

    // Keyboard shortcuts
    window.addEventListener('keydown',e=>{ if(['j','J','n','N'].includes(e.key)) themeBtn.click(); if(['g','G'].includes(e.key)) document.querySelector('#galeria').scrollIntoView({behavior:'smooth'}); if(['r','R'].includes(e.key)) document.querySelector('#rezerwacja').scrollIntoView({behavior:'smooth'}); });

    // Form submission (fetch -> Formspree) to keep user on page and show modal
    const form = $('#bookForm'), modal = $('#modal'), modalSummary = $('#modalSummary');
    form.addEventListener('submit', async (e)=>{
      e.preventDefault();
      const phone = form.phone.value.trim();
      if(!phone || phone.length<7){ return toast('Sprawdź numer telefonu'); }
      const fd = new FormData(form);
      try{
        const res = await fetch(form.action, { method:'POST', headers:{'Accept':'application/json'}, body:fd });
        if(res.ok){
          const data = Object.fromEntries(fd.entries());
          const extras = $$('input[type=\"checkbox\"]', form).filter(i=>i.checked).map(i=>i.name);
          const lines = [
            `Imię: ${data.name||''}`,
            `Email: ${data.email||''}`,
            `Telefon: ${data.phone||''}`,
            `Adres: ${data.address||''}`,
            `Data: ${data.date||''} ${data.time||''}`,
            `Pakiet: ${data.package||''}`,
            `Dodatki: ${extras.length? extras.join(', '): 'brak'}`,
            `Notatki: ${data.note||'-'}`
          ].join('\n');
          modalSummary.textContent = lines;
          modal.showModal();
          toast('Zgłoszenie wysłane — dzięki!');
          form.reset();
        } else {
          const json = await res.json().catch(()=>null);
          console.error('Formspree error', json);
          toast('Błąd wysyłki — spróbuj ponownie');
        }
      } catch(err){
        console.error(err);
        toast('Błąd sieci — sprawdź połączenie');
      }
    });

    function toast(msg){ const el = $('#toast'); el.textContent = msg; el.classList.add('show'); setTimeout(()=>el.classList.remove('show'),3000); }

    // Reveal animation
    const observer = new IntersectionObserver((entries)=>{ entries.forEach(entry=>{ if(entry.isIntersecting){ entry.target.animate([{opacity:0, transform:'translateY(8px)'},{opacity:1, transform:'translateY(0)'}],{duration:500,easing:'ease-out'}); observer.unobserve(entry.target); } }); },{threshold:.15});
    $$('.service, .plan, .shot, .quote, .card').forEach(el=>observer.observe(el));

    // Modal close on outside click
    modal?.addEventListener('click',(e)=>{ const r = modal.getBoundingClientRect(); if(!(e.clientX>=r.left&&e.clientX<=r.right&&e.clientY>=r.top&&e.clientY<=r.bottom)) modal.close(); });

    // Light PWA hint (no-op SW)
    if('serviceWorker' in navigator){ try{ const swCode = `self.addEventListener('install', e=>self.skipWaiting());self.addEventListener('activate', e=>clients.claim());`; const blob = new Blob([swCode], {type:'text/javascript'}); const url = URL.createObjectURL(blob); navigator.serviceWorker.register(url).catch(()=>{}); }catch(e){} }
  </script>

